<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Streame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/textSecondary</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="background">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="WelComeTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="background">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SignInUp" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="background">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DashBoardTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:windowFullscreen">true</item>-->

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="searchViewStyle">@style/searchStyle</item>
    </style>

    <!--chip style-->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_background_color</item>
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="chipStrokeColor">@color/color_choice_chip_background_color</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <!-- tabbackground  Style-->

    <style name="CustomTabText" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabBackground">@color/tabbar_background_selecter</item>
        <item name="tabSelectedTextColor">@color/buttonTextPrimary</item>
        <item name="tabTextColor">@color/colorPrimary</item>
    </style>
    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:tabStripEnabled">false</item>
        <item name="tabSelectedTextColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.statusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!--searchView -->
    <style name="MyToolbar" parent="AppTheme">
        <item name="searchViewStyle">@style/searchStyle</item>
    </style>
    <style name="searchStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textSize">5sp</item>
        <item name="android:queryHint">@string/hint_search</item>
        <item name="android:searchIcon">@null</item>
    </style>

    <!--Dialog theme Full Screen -->
    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowFixedWidthMajor">@dimen/_100sdp</item>
    </style>

    <style name="AuthenticateLive" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <!--        <item name="android:background">@drawable/background_2</item>-->
        <!--        <item name="android:fitsSystemWindows">false</item>-->
        <item name="android:statusBarColor">@color/black_half_transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Live" parent="AppTheme">
