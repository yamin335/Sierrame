<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_30sdp"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:text="Notification"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/textHeadingPrimary" />

    <TextView
        android:id="@+id/textViewFailureInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:maxLines="3"
        android:padding="@dimen/_2sdp"
        android:text="@string/defaultString"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textPrimary" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAlertFailure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_26sdp"
            android:paddingHorizontal="@dimen/_30sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/btn_white_bg_black_corner"
            android:text="Ok"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black" />



</LinearLayout>